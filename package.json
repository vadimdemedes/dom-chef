{
  "name": "dom-chef",
  "version": "4.0.0",
  "description": "Build regular DOM elements using JSX",
  "license": "MIT",
  "repository": "vadimdemedes/dom-chef",
  "author": {
    "name": "Vadim Demedes",
    "email": "vdemedes@gmail.com",
    "url": "https://github.com/vadimdemedes"
  },
  "maintainers": [
    {
      "name": "Federico Brigante",
      "email": "opensource@bfred.it",
      "url": "https://bfred.it"
    }
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "tsc",
    "test": "tsc && xo && ava",
    "watch": "tsc --watch"
  },
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "keywords": [
    "jsx",
    "dom",
    "native",
    "innerHTML",
    "document",
    "createElement",
    "create",
    "element",
    "documentFragment",
    "typescript"
  ],
  "dependencies": {
    "array-flatten": "^3.0.0",
    "svg-tag-names": "^2.0.1"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@sindresorhus/tsconfig": "^0.7.0",
    "ava": "^2.4.0",
    "esm": "^3.2.25",
    "jsdom": "^16.2.1",
    "sinon": "^9.0.1",
    "typescript": "^3.8.3",
    "xo": "^0.28.1"
  },
  "ava": {
    "require": [
      "esm"
    ],
    "babel": {
      "testOptions": {
        "plugins": [
          "@babel/plugin-transform-react-jsx"
        ]
      }
    }
  },
  "xo": {
    "env": "browser",
    "rules": {
      "unicorn/prefer-node-append": "off",
      "@typescript-eslint/prefer-readonly-parameter-types": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-unsafe-member-access": "off",
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "React"
        }
      ]
    }
  }
}
